generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ==================== USERS ====================

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  hashedPassword String?
  name           String?
  avatar         String?
  phone          String?
  role           UserRole @default(CUSTOMER)
  isVerified     Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  store          Store?
  orders         Order[]
  reviews        Review[]
  cart           CartItem[]
  wishlist       Wishlist[]
  addresses      Address[]
  notifications  Notification[]
}

enum UserRole {
  ADMIN
  VENDOR
  CUSTOMER
}

model Address {
  id         String  @id @default(cuid())
  label      String  @default("Home")
  fullName   String
  phone      String
  address1   String
  address2   String?
  city       String
  state      String
  zipCode    String
  country    String  @default("US")
  isDefault  Boolean @default(false)
  user       User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  orders     Order[]

  @@index([userId])
}

// ==================== STORE / VENDOR ====================

model Store {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String?  @db.Text
  logo        String?
  banner      String?
  email       String?
  phone       String?
  address     String?
  city        String?
  country     String?
  rating      Float    @default(0)
  totalSales  Int      @default(0)
  totalRevenue Float   @default(0)
  commission  Float    @default(10) // platform commission %
  isActive    Boolean  @default(true)
  isVerified  Boolean  @default(false)
  stripeAccountId String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     String   @unique
  products    Product[]
  orders      OrderItem[]
  payouts     Payout[]

  @@index([slug])
}

// ==================== PRODUCTS ====================

model Category {
  id          String     @id @default(cuid())
  name        String
  slug        String     @unique
  description String?
  image       String?
  parentId    String?
  parent      Category?  @relation("SubCategories", fields: [parentId], references: [id])
  children    Category[] @relation("SubCategories")
  products    Product[]
  sortOrder   Int        @default(0)

  @@index([slug])
}

model Product {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String   @db.Text
  shortDesc   String?
  price       Float
  comparePrice Float?
  costPrice   Float?
  currency    String   @default("USD")
  sku         String?
  barcode     String?
  stock       Int      @default(0)
  lowStockAt  Int      @default(5)
  weight      Float?
  isActive    Boolean  @default(true)
  isFeatured  Boolean  @default(false)
  isDigital   Boolean  @default(false)
  rating      Float    @default(0)
  reviewCount Int      @default(0)
  salesCount  Int      @default(0)
  metaTitle   String?
  metaDesc    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  store       Store    @relation(fields: [storeId], references: [id])
  storeId     String
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?
  images      ProductImage[]
  variants    ProductVariant[]
  reviews     Review[]
  cartItems   CartItem[]
  wishlist    Wishlist[]
  orderItems  OrderItem[]
  tags        ProductTag[]

  @@index([storeId])
  @@index([categoryId])
  @@index([slug])
  @@index([isActive, isFeatured])
}

model ProductImage {
  id        String  @id @default(cuid())
  url       String
  alt       String?
  position  Int     @default(0)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  @@index([productId])
}

model ProductVariant {
  id        String @id @default(cuid())
  name      String // e.g., "Large / Red"
  sku       String?
  price     Float
  stock     Int    @default(0)
  options   Json   // { "size": "L", "color": "Red" }
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String

  @@index([productId])
}

model Tag {
  id       String       @id @default(cuid())
  name     String       @unique
  products ProductTag[]
}

model ProductTag {
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId     String

  @@id([productId, tagId])
}

// ==================== SHOPPING ====================

model CartItem {
  id        String  @id @default(cuid())
  quantity  Int     @default(1)
  variantId String?
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  @@unique([userId, productId, variantId])
}

model Wishlist {
  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String
  addedAt   DateTime @default(now())

  @@id([userId, productId])
}

// ==================== ORDERS ====================

model Order {
  id              String      @id @default(cuid())
  orderNumber     String      @unique
  status          OrderStatus @default(PENDING)
  subtotal        Float
  shippingCost    Float       @default(0)
  taxAmount       Float       @default(0)
  discount        Float       @default(0)
  total           Float
  currency        String      @default("USD")
  paymentMethod   String?
  paymentStatus   PaymentStatus @default(PENDING)
  stripePaymentId String?
  shippingMethod  String?
  trackingNumber  String?
  notes           String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  user            User        @relation(fields: [userId], references: [id])
  userId          String
  shippingAddress Address?    @relation(fields: [addressId], references: [id])
  addressId       String?
  items           OrderItem[]
  coupon          CouponUsage?

  @@index([userId])
  @@index([status])
  @@index([orderNumber])
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
  REFUNDED
  RETURNED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

model OrderItem {
  id        String @id @default(cuid())
  quantity  Int
  unitPrice Float
  total     Float
  variantInfo Json?
  status    String @default("PENDING") // PENDING, CONFIRMED, SHIPPED, DELIVERED
  product   Product @relation(fields: [productId], references: [id])
  productId String
  order     Order   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String
  store     Store   @relation(fields: [storeId], references: [id])
  storeId   String

  @@index([orderId])
  @@index([storeId])
}

// ==================== REVIEWS & COUPONS ====================

model Review {
  id        String  @id @default(cuid())
  rating    Int     // 1-5
  title     String?
  comment   String? @db.Text
  images    Json?   // ["url1", "url2"]
  isVerified Boolean @default(false)
  product   Product @relation(fields: [productId], references: [id])
  productId String
  user      User    @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())

  @@unique([userId, productId])
  @@index([productId])
}

model Coupon {
  id          String   @id @default(cuid())
  code        String   @unique
  discount    Float
  type        String   @default("PERCENTAGE") // PERCENTAGE, FIXED
  minOrder    Float?
  maxDiscount Float?
  maxUses     Int?
  usedCount   Int      @default(0)
  validFrom   DateTime @default(now())
  validUntil  DateTime?
  isActive    Boolean  @default(true)
  usages      CouponUsage[]
}

model CouponUsage {
  id       String @id @default(cuid())
  coupon   Coupon @relation(fields: [couponId], references: [id])
  couponId String
  order    Order  @relation(fields: [orderId], references: [id])
  orderId  String @unique
}

model Payout {
  id        String   @id @default(cuid())
  amount    Float
  currency  String   @default("USD")
  status    String   @default("PENDING") // PENDING, PROCESSING, COMPLETED, FAILED
  method    String   @default("STRIPE")
  reference String?
  store     Store    @relation(fields: [storeId], references: [id])
  storeId   String
  createdAt DateTime @default(now())

  @@index([storeId])
}

model Notification {
  id        String   @id @default(cuid())
  type      String
  title     String
  message   String
  read      Boolean  @default(false)
  link      String?
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())

  @@index([userId, read])
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}

enum SwapStatus {
  PENDING
  ACCEPTED
  DECLINED
  COMPLETED
  CANCELLED
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String
  avatar    String?
  bio       String?
  location  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  skills        Skill[]
  portfolios    Portfolio[]
  offeredSwaps  SwapRequest[] @relation("Offerer")
  requestedSwaps SwapRequest[] @relation("Requester")
  reviewsGiven  Review[]      @relation("Reviewer")
  reviewsReceived Review[]    @relation("Reviewed")

  @@index([email])
  @@index([location])
}

model Skill {
  id        String     @id @default(cuid())
  name      String
  category  String
  level     SkillLevel
  userId    String
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  offeredIn   SwapRequest[] @relation("OfferedSkill")
  requestedIn SwapRequest[] @relation("RequestedSkill")

  @@index([userId])
  @@index([category])
  @@index([level])
  @@index([name, category])
}

model SwapRequest {
  id               String     @id @default(cuid())
  offererId        String
  offerer          User       @relation("Offerer", fields: [offererId], references: [id], onDelete: Cascade)
  requesterId      String
  requester        User       @relation("Requester", fields: [requesterId], references: [id], onDelete: Cascade)
  offeredSkillId   String
  offeredSkill     Skill      @relation("OfferedSkill", fields: [offeredSkillId], references: [id])
  requestedSkillId String
  requestedSkill   Skill      @relation("RequestedSkill", fields: [requestedSkillId], references: [id])
  status           SwapStatus @default(PENDING)
  message          String?
  scheduledAt      DateTime?
  completedAt      DateTime?
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt

  reviews Review[]

  @@index([offererId])
  @@index([requesterId])
  @@index([status])
  @@index([createdAt])
}

model Review {
  id           String      @id @default(cuid())
  rating       Int
  comment      String?
  reviewerId   String
  reviewer     User        @relation("Reviewer", fields: [reviewerId], references: [id], onDelete: Cascade)
  reviewedId   String
  reviewed     User        @relation("Reviewed", fields: [reviewedId], references: [id], onDelete: Cascade)
  swapRequestId String
  swapRequest  SwapRequest @relation(fields: [swapRequestId], references: [id], onDelete: Cascade)
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt

  @@unique([reviewerId, swapRequestId])
  @@index([reviewedId])
  @@index([rating])
}

model Portfolio {
  id          String   @id @default(cuid())
  title       String
  description String?
  imageUrl    String?
  projectUrl  String?
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
}

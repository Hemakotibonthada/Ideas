datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ─── Enums ───────────────────────────────────────────────

enum AlertType {
  BELOW
  DROP_PERCENT
  ANY_CHANGE
}

enum Store {
  AMAZON
  WALMART
  TARGET
  BESTBUY
  EBAY
  COSTCO
  NEWEGG
  CUSTOM
}

// ─── Models ──────────────────────────────────────────────

model User {
  id                      String   @id @default(cuid())
  email                   String   @unique
  name                    String
  notificationPreferences Json?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt

  priceAlerts PriceAlert[]
  watchlists  Watchlist[]
}

model Product {
  id           String   @id @default(cuid())
  name         String
  url          String
  store        Store
  imageUrl     String?
  currentPrice Float
  lowestPrice  Float
  highestPrice Float
  currency     String   @default("USD")
  lastChecked  DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  pricePoints       PricePoint[]
  priceAlerts       PriceAlert[]
  watchlistProducts WatchlistProduct[]
  priceComparisons  PriceComparison[]

  @@index([store])
  @@index([lastChecked])
}

model PricePoint {
  id        String   @id @default(cuid())
  productId String
  price     Float
  timestamp DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([timestamp])
}

model PriceAlert {
  id          String    @id @default(cuid())
  userId      String
  productId   String
  targetPrice Float
  alertType   AlertType
  triggered   Boolean   @default(false)
  triggeredAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([productId])
  @@index([triggered])
}

model Watchlist {
  id        String   @id @default(cuid())
  userId    String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user     User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  products WatchlistProduct[]

  @@index([userId])
}

model WatchlistProduct {
  id          String   @id @default(cuid())
  watchlistId String
  productId   String
  addedAt     DateTime @default(now())

  watchlist Watchlist @relation(fields: [watchlistId], references: [id], onDelete: Cascade)
  product   Product   @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([watchlistId, productId])
}

model PriceComparison {
  id          String   @id @default(cuid())
  productId   String
  store       Store
  price       Float
  url         String
  lastUpdated DateTime @default(now())

  product Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@index([productId])
  @@index([store])
}

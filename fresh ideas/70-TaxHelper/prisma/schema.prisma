datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ─── Enums ───────────────────────────────────────────────

enum FilingStatus {
  SINGLE
  MARRIED_JOINT
  MARRIED_SEPARATE
  HEAD_OF_HOUSEHOLD
}

enum DeductionCategory {
  MEDICAL
  CHARITABLE
  MORTGAGE
  STATE_TAX
  EDUCATION
  BUSINESS
  HOME_OFFICE
}

enum AlertSeverity {
  INFO
  WARNING
  CRITICAL
}

enum ReceiptStatus {
  PENDING
  CATEGORIZED
  VERIFIED
  REJECTED
}

// ─── Models ──────────────────────────────────────────────

model User {
  id          String        @id @default(cuid())
  email       String        @unique
  name        String
  phone       String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  taxProfiles TaxProfile[]
  receipts    Receipt[]

  @@index([email])
}

model TaxProfile {
  id           String        @id @default(cuid())
  userId       String
  year         Int
  filingStatus FilingStatus
  income       Decimal       @db.Decimal(12, 2)
  state        String
  dependents   Int           @default(0)
  w2Income     Decimal?      @db.Decimal(12, 2)
  selfEmployed Boolean       @default(false)
  selfIncome   Decimal?      @db.Decimal(12, 2)
  investIncome Decimal?      @db.Decimal(12, 2)
  rentalIncome Decimal?      @db.Decimal(12, 2)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  user        User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  deductions  Deduction[]
  estimates   TaxEstimate[]
  auditAlerts AuditAlert[]

  @@unique([userId, year])
  @@index([userId])
  @@index([year])
  @@index([filingStatus])
  @@index([state])
}

model Deduction {
  id            String            @id @default(cuid())
  profileId     String
  category      DeductionCategory
  description   String
  amount        Decimal           @db.Decimal(10, 2)
  eligible      Boolean           @default(true)
  documentation String[]
  receiptIds    String[]
  notes         String?
  maxAllowed    Decimal?          @db.Decimal(10, 2)
  verified      Boolean           @default(false)
  createdAt     DateTime          @default(now())
  updatedAt     DateTime          @updatedAt

  profile TaxProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@index([category])
  @@index([eligible])
  @@index([profileId, category])
  @@index([amount(sort: Desc)])
}

model TaxEstimate {
  id              String   @id @default(cuid())
  profileId       String
  year            Int
  federalTax      Decimal  @db.Decimal(10, 2)
  stateTax        Decimal  @db.Decimal(10, 2)
  totalTax        Decimal  @db.Decimal(10, 2)
  refund          Decimal  @db.Decimal(10, 2) // negative = owed
  effectiveRate   Float
  marginalRate    Float
  totalDeductions Decimal  @db.Decimal(10, 2)
  taxableIncome   Decimal  @db.Decimal(12, 2)
  standardVsItemized String? // which is better
  calculatedAt    DateTime @default(now())
  createdAt       DateTime @default(now())

  profile TaxProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@index([year])
  @@index([profileId, year])
  @@index([calculatedAt(sort: Desc)])
}

model Receipt {
  id         String        @id @default(cuid())
  userId     String
  vendor     String
  amount     Decimal       @db.Decimal(10, 2)
  category   DeductionCategory?
  date       DateTime
  image      String?
  ocrText    String?
  status     ReceiptStatus @default(PENDING)
  taxYear    Int?
  notes      String?
  tags       String[]
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([category])
  @@index([date(sort: Desc)])
  @@index([userId, date(sort: Desc)])
  @@index([vendor])
  @@index([status])
  @@index([taxYear])
}

model AuditAlert {
  id          String        @id @default(cuid())
  profileId   String
  severity    AlertSeverity
  title       String
  description String
  category    DeductionCategory?
  flaggedAmount Decimal?    @db.Decimal(10, 2)
  threshold   Float?
  resolved    Boolean       @default(false)
  resolvedAt  DateTime?
  recommendation String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  profile TaxProfile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@index([severity])
  @@index([resolved])
  @@index([profileId, resolved])
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ─── Enums ───────────────────────────────────────────────

enum LocationType {
  INDOOR
  OUTDOOR
  BALCONY
}

enum TaskType {
  WATER
  FERTILIZE
  PRUNE
  REPOT
  ROTATE
}

enum DiagnosisSeverity {
  HEALTHY
  MILD
  MODERATE
  SEVERE
  CRITICAL
}

// ─── Models ──────────────────────────────────────────────

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String
  location    String?
  climateZone String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  plants              Plant[]
  plantIdentifications PlantIdentification[]
  reminders           Reminder[]
}

model Plant {
  id           String       @id @default(cuid())
  userId       String
  name         String
  species      String
  nickname     String?
  photoUrl     String?
  acquiredDate DateTime?
  location     LocationType @default(INDOOR)
  room         String?
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  careSchedules    CareSchedule[]
  careLogs         CareLog[]
  diagnosisReports DiagnosisReport[]
  reminders        Reminder[]

  @@index([userId])
}

model CareSchedule {
  id            String   @id @default(cuid())
  plantId       String
  taskType      TaskType
  frequencyDays Int
  nextDueDate   DateTime
  lastDoneAt    DateTime?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  plant     Plant      @relation(fields: [plantId], references: [id], onDelete: Cascade)
  reminders Reminder[]

  @@index([plantId])
  @@index([nextDueDate])
}

model CareLog {
  id          String   @id @default(cuid())
  plantId     String
  taskType    TaskType
  completedAt DateTime @default(now())
  notes       String?
  photoUrl    String?
  createdAt   DateTime @default(now())

  plant Plant @relation(fields: [plantId], references: [id], onDelete: Cascade)

  @@index([plantId])
  @@index([completedAt])
}

model DiagnosisReport {
  id             String            @id @default(cuid())
  plantId        String
  photoUrl       String
  diagnosis      String
  confidence     Float
  severity       DiagnosisSeverity
  treatment      String?
  preventionTips Json?
  createdAt      DateTime          @default(now())

  plant Plant @relation(fields: [plantId], references: [id], onDelete: Cascade)

  @@index([plantId])
}

model PlantIdentification {
  id         String   @id @default(cuid())
  userId     String
  photoUrl   String
  species    String?
  commonName String?
  confidence Float?
  careGuide  Json?
  createdAt  DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model Reminder {
  id             String    @id @default(cuid())
  userId         String
  plantId        String
  careScheduleId String?
  scheduledAt    DateTime
  sentAt         DateTime?
  acknowledged   Boolean   @default(false)
  createdAt      DateTime  @default(now())

  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  plant        Plant         @relation(fields: [plantId], references: [id], onDelete: Cascade)
  careSchedule CareSchedule? @relation(fields: [careScheduleId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([plantId])
  @@index([scheduledAt])
}

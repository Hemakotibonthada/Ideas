datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ── Enums ──────────────────────────────────────────────

enum NoiseType {
  TRAFFIC
  CONSTRUCTION
  NIGHTLIFE
  AIRCRAFT
  INDUSTRIAL
  NATURE
  HVAC
  MUSIC
  CROWD
  SIRENS
  OTHER
}

enum PlaceType {
  CAFE
  LIBRARY
  COWORKING
  PARK
  RESTAURANT
  BAR
  APARTMENT
  OFFICE
  HOTEL
}

enum ZoneCategory {
  SILENT
  QUIET
  MODERATE
  LOUD
  VERY_LOUD
}

enum TimeOfDay {
  MORNING
  AFTERNOON
  EVENING
  NIGHT
}

// ── Models ─────────────────────────────────────────────

model User {
  id              String           @id @default(cuid())
  email           String           @unique
  name            String
  location        Json?
  noiseSamples    NoiseSample[]
  placeReviews    PlaceReview[]
  quietSpotSearches QuietSpotSearch[]
  noiseReports    NoiseReport[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model NoiseSample {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  lat         Float
  lng         Float
  decibels    Float
  type        NoiseType
  description String?
  timestamp   DateTime  @default(now())
  duration    Int?
}

model NoiseZone {
  id          String       @id @default(cuid())
  lat         Float
  lng         Float
  gridSize    Float
  avgDecibels Float
  maxDecibels Float
  sampleCount Int          @default(0)
  lastUpdated DateTime     @default(now())
  category    ZoneCategory
}

model Place {
  id         String        @id @default(cuid())
  name       String
  type       PlaceType
  address    String
  lat        Float
  lng        Float
  avgNoise   Float?
  quietHours Json?
  reviews    Int           @default(0)
  rating     Float?
  placeReviews PlaceReview[]
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
}

model PlaceReview {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  placeId          String
  place            Place    @relation(fields: [placeId], references: [id], onDelete: Cascade)
  noiseRating      Int
  comment          String?
  visitedAt        DateTime
  timeOfDay        TimeOfDay
  decibelsRecorded Float?
  createdAt        DateTime @default(now())
}

model QuietSpotSearch {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lat        Float
  lng        Float
  radius     Float
  maxDecibels Float
  results    Json
  searchedAt DateTime @default(now())
}

model NoiseReport {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  lat         Float
  lng         Float
  type        NoiseType
  description String
  photos      String[]
  severity    Int
  upvotes     Int       @default(0)
  status      String    @default("OPEN")
  createdAt   DateTime  @default(now())
}

model HeatmapTile {
  id          String   @id @default(cuid())
  x           Int
  y           Int
  zoom        Int
  avgDecibels Float
  color       String
  updatedAt   DateTime @default(now())

  @@unique([x, y, zoom])
}

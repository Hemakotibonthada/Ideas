datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum SkillCategory {
  TUTORING
  COOKING
  HANDYMAN
  GARDENING
  TECH_HELP
  PET_CARE
  CHILDCARE
  LANGUAGE
  FITNESS
  MUSIC
  ART
  CLEANING
  MOVING
  DRIVING
  OTHER
}

enum RequestStatus {
  PENDING
  ACCEPTED
  DECLINED
  COMPLETED
  CANCELLED
}

enum CommunityRole {
  ADMIN
  MODERATOR
  MEMBER
}

enum CreditType {
  EARNED
  SPENT
  BONUS
}

model User {
  id                 String            @id @default(cuid())
  email              String            @unique
  name               String
  location           String?
  bio                String?
  avatarUrl          String?
  timeBalance        Float             @default(0)
  rating             Float             @default(0)
  totalHoursGiven    Float             @default(0)
  totalHoursReceived Float             @default(0)
  createdAt          DateTime          @default(now())
  updatedAt          DateTime          @updatedAt
  skillListings      SkillListing[]
  requestsMade       TimeRequest[]     @relation("Requester")
  exchangesAsProvider TimeExchange[]   @relation("Provider")
  exchangesAsRequester TimeExchange[]  @relation("ExchangeRequester")
  reviewsWritten     Review[]          @relation("Reviewer")
  reviewsReceived    Review[]          @relation("Reviewed")
  timeCredits        TimeCredit[]
  communityMemberships CommunityMember[]
}

model SkillListing {
  id             String        @id @default(cuid())
  user           User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId         String
  title          String
  description    String?
  category       SkillCategory
  hoursPerSession Float        @default(1)
  available      Boolean       @default(true)
  rating         Float         @default(0)
  createdAt      DateTime      @default(now())
  timeRequests   TimeRequest[]

  @@index([userId])
  @@index([category])
}

model TimeRequest {
  id             String        @id @default(cuid())
  requester      User          @relation("Requester", fields: [requesterId], references: [id], onDelete: Cascade)
  requesterId    String
  skillListing   SkillListing  @relation(fields: [skillListingId], references: [id], onDelete: Cascade)
  skillListingId String
  proposedDate   DateTime
  durationHours  Float
  message        String?
  status         RequestStatus @default(PENDING)
  createdAt      DateTime      @default(now())
  exchange       TimeExchange?

  @@index([requesterId])
  @@index([skillListingId])
}

model TimeExchange {
  id              String      @id @default(cuid())
  request         TimeRequest @relation(fields: [requestId], references: [id], onDelete: Cascade)
  requestId       String      @unique
  provider        User        @relation("Provider", fields: [providerId], references: [id])
  providerId      String
  requester       User        @relation("ExchangeRequester", fields: [requesterId], references: [id])
  requesterId     String
  hours           Float
  completedAt     DateTime?
  providerRating  Float?
  requesterRating Float?
  reviews         Review[]

  @@index([providerId])
  @@index([requesterId])
}

model Review {
  id         String       @id @default(cuid())
  exchange   TimeExchange @relation(fields: [exchangeId], references: [id], onDelete: Cascade)
  exchangeId String
  reviewer   User         @relation("Reviewer", fields: [reviewerId], references: [id])
  reviewerId String
  reviewed   User         @relation("Reviewed", fields: [reviewedId], references: [id])
  reviewedId String
  rating     Float
  comment    String?
  createdAt  DateTime     @default(now())

  @@index([exchangeId])
}

model TimeCredit {
  id          String     @id @default(cuid())
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  amount      Float
  type        CreditType
  exchangeId  String?
  description String?
  createdAt   DateTime   @default(now())

  @@index([userId])
}

model Community {
  id          String            @id @default(cuid())
  name        String
  description String?
  location    String?
  memberCount Int               @default(0)
  isPublic    Boolean           @default(true)
  createdAt   DateTime          @default(now())
  members     CommunityMember[]
}

model CommunityMember {
  id          String        @id @default(cuid())
  community   Community     @relation(fields: [communityId], references: [id], onDelete: Cascade)
  communityId String
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  role        CommunityRole @default(MEMBER)
  joinedAt    DateTime      @default(now())

  @@unique([communityId, userId])
  @@index([communityId])
  @@index([userId])
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  name           String?
  email          String   @unique
  hashedPassword String?
  image          String?
  role           Role     @default(SALES_REP)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  organizationId String?
  organization   Organization? @relation(fields: [organizationId], references: [id])
  contacts       Contact[]
  deals          Deal[]
  activities     Activity[]
  tasks          SalesTask[]
  emails         EmailLog[]
}

enum Role {
  OWNER
  ADMIN
  SALES_MANAGER
  SALES_REP
}

model Organization {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  plan        String   @default("FREE")
  currency    String   @default("USD")
  createdAt   DateTime @default(now())
  users       User[]
  contacts    Contact[]
  companies   Company[]
  deals       Deal[]
  pipelines   Pipeline[]
  customFields CustomField[]
}

// ==================== CRM CORE ====================

model Contact {
  id             String    @id @default(cuid())
  firstName      String
  lastName       String
  email          String?
  phone          String?
  title          String?
  source         LeadSource @default(MANUAL)
  status         ContactStatus @default(LEAD)
  score          Int       @default(0)
  avatar         String?
  address        String?
  city           String?
  state          String?
  country        String?
  notes          String?   @db.Text
  lastContactedAt DateTime?
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  company        Company?  @relation(fields: [companyId], references: [id])
  companyId      String?
  owner          User?     @relation(fields: [ownerId], references: [id])
  ownerId        String?
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  deals          DealContact[]
  activities     Activity[]
  tasks          SalesTask[]
  emails         EmailLog[]
  tags           ContactTag[]
  customValues   CustomFieldValue[]

  @@index([organizationId])
  @@index([ownerId])
  @@index([status])
  @@index([email])
}

enum LeadSource {
  MANUAL
  WEBSITE
  REFERRAL
  LINKEDIN
  COLD_CALL
  ADVERTISING
  TRADE_SHOW
  EMAIL_CAMPAIGN
  OTHER
}

enum ContactStatus {
  LEAD
  QUALIFIED
  CUSTOMER
  CHURNED
  INACTIVE
}

model Company {
  id             String   @id @default(cuid())
  name           String
  domain         String?
  industry       String?
  size           CompanySize?
  revenue        Float?
  phone          String?
  website        String?
  address        String?
  city           String?
  country        String?
  logo           String?
  description    String?  @db.Text
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  contacts       Contact[]
  deals          Deal[]

  @@index([organizationId])
}

enum CompanySize {
  SOLO
  SMALL       // 1-10
  MEDIUM      // 11-50
  LARGE       // 51-200
  ENTERPRISE  // 200+
}

// ==================== SALES PIPELINE ====================

model Pipeline {
  id             String   @id @default(cuid())
  name           String
  isDefault      Boolean  @default(false)
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  stages         Stage[]
  deals          Deal[]

  @@index([organizationId])
}

model Stage {
  id          String  @id @default(cuid())
  name        String
  color       String  @default("#3b82f6")
  position    Int     @default(0)
  probability Int     @default(0) // 0-100%
  pipeline    Pipeline @relation(fields: [pipelineId], references: [id], onDelete: Cascade)
  pipelineId  String
  deals       Deal[]

  @@index([pipelineId])
}

model Deal {
  id             String     @id @default(cuid())
  title          String
  value          Float      @default(0)
  currency       String     @default("USD")
  status         DealStatus @default(OPEN)
  probability    Int        @default(50)
  expectedCloseDate DateTime?
  closedAt       DateTime?
  lostReason     String?
  notes          String?    @db.Text
  position       Int        @default(0)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  pipeline       Pipeline   @relation(fields: [pipelineId], references: [id])
  pipelineId     String
  stage          Stage      @relation(fields: [stageId], references: [id])
  stageId        String
  company        Company?   @relation(fields: [companyId], references: [id])
  companyId      String?
  owner          User?      @relation(fields: [ownerId], references: [id])
  ownerId        String?
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  contacts       DealContact[]
  activities     Activity[]
  products       DealProduct[]

  @@index([organizationId])
  @@index([stageId])
  @@index([ownerId])
  @@index([status])
}

enum DealStatus {
  OPEN
  WON
  LOST
}

model DealContact {
  deal      Deal    @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId    String
  contact   Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  contactId String
  role      String? // Decision Maker, Influencer, etc.

  @@id([dealId, contactId])
}

model DealProduct {
  id        String @id @default(cuid())
  name      String
  quantity  Int    @default(1)
  price     Float
  deal      Deal   @relation(fields: [dealId], references: [id], onDelete: Cascade)
  dealId    String
}

// ==================== ACTIVITIES & TASKS ====================

model Activity {
  id        String       @id @default(cuid())
  type      ActivityType
  subject   String
  notes     String?      @db.Text
  duration  Int?         // minutes
  outcome   String?
  createdAt DateTime     @default(now())
  user      User         @relation(fields: [userId], references: [id])
  userId    String
  contact   Contact?     @relation(fields: [contactId], references: [id])
  contactId String?
  deal      Deal?        @relation(fields: [dealId], references: [id])
  dealId    String?

  @@index([contactId])
  @@index([dealId])
  @@index([userId])
}

enum ActivityType {
  CALL
  EMAIL
  MEETING
  NOTE
  TASK_COMPLETED
  DEAL_STAGE_CHANGED
  DEAL_WON
  DEAL_LOST
}

model SalesTask {
  id          String     @id @default(cuid())
  title       String
  description String?
  dueDate     DateTime?
  priority    String     @default("MEDIUM")
  completed   Boolean    @default(false)
  completedAt DateTime?
  user        User       @relation(fields: [userId], references: [id])
  userId      String
  contact     Contact?   @relation(fields: [contactId], references: [id])
  contactId   String?
  createdAt   DateTime   @default(now())

  @@index([userId])
  @@index([dueDate])
}

model EmailLog {
  id        String   @id @default(cuid())
  subject   String
  body      String   @db.Text
  status    String   @default("SENT") // SENT, OPENED, CLICKED, BOUNCED
  openedAt  DateTime?
  contact   Contact  @relation(fields: [contactId], references: [id])
  contactId String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  sentAt    DateTime @default(now())

  @@index([contactId])
}

model Tag {
  id       String       @id @default(cuid())
  name     String
  color    String       @default("#6b7280")
  contacts ContactTag[]
}

model ContactTag {
  contact   Contact @relation(fields: [contactId], references: [id], onDelete: Cascade)
  contactId String
  tag       Tag     @relation(fields: [tagId], references: [id], onDelete: Cascade)
  tagId     String

  @@id([contactId, tagId])
}

model CustomField {
  id             String   @id @default(cuid())
  name           String
  type           String   // TEXT, NUMBER, DATE, SELECT, MULTISELECT
  options        Json?    // for SELECT/MULTISELECT
  entity         String   // CONTACT, DEAL, COMPANY
  required       Boolean  @default(false)
  organization   Organization @relation(fields: [organizationId], references: [id])
  organizationId String
  values         CustomFieldValue[]
}

model CustomFieldValue {
  id            String      @id @default(cuid())
  value         String
  customField   CustomField @relation(fields: [customFieldId], references: [id], onDelete: Cascade)
  customFieldId String
  contact       Contact?    @relation(fields: [contactId], references: [id], onDelete: Cascade)
  contactId     String?

  @@index([customFieldId])
}
